{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": "./src/next-active-link.tsx",
    "forceConsistentCasingInFileNames": true,
    "plugins": [{
      "name": "next"
    }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": ["node_modules"]
}